{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": [
        "api:app",
        "--reload"
      ],
      "jinja": true
    },
    {
      "type": "chrome",
      "request": "launch",
      "skipFiles": [
        "${workspaceFolder}/frontend/node_modules/**/*.js"
      ],
      "name": "Launch Chrome(localhost)",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend",
      "runtimeArgs": [
        "--remote-debugging-port=9222"
      ],
      "sourceMaps": true
    }
  ]
}
