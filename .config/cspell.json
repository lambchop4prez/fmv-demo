{
  "$schema": "https://raw.githubusercontent.com/streetsidesoftware/cspell/main/cspell.schema.json",
  "version": "0.2",
  "dictionaryDefinitions": [
    {
      "name": "project-words",
      "path": "./words.txt",
      "addWords": true
    }
  ],
  "languageId": [
    {
      "filename": "locales/es.yaml",
      "language": "es"
    }
  ],
  "useGitignore": true,
  "dictionaries": [
    "project-words"
  ],
  "ignorePaths": [
    "dist",
    "node_modules",
    ".venv",
    "/.config/words.txt",
    "locales",
    "pnpm-lock.yaml",
    "*.d.ts"
  ]
}
